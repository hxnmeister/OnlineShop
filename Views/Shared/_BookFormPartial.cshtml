@model OnlineShop.Models.Book

<div class="row">
    <div class="col-md-4">
        <form asp-action="@(Model == null ? "Create" : "Edit")" method="post" asp-route-id="@Model?.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" placeholder="Enter title..." />
                <label asp-for="Title"></label>

                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PublisherName" class="form-control" placeholder="Enter publisher..." />
                <label asp-for="PublisherName"></label>

                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Genre" class="form-control" placeholder="Enter genre..." />
                <label asp-for="Genre"></label>

                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Rating" class="form-control" placeholder="Enter rating..." />
                <label asp-for="Rating"></label>

                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="PagesAmount" class="form-control" placeholder="Enter pages count..." />
                <label asp-for="PagesAmount"></label>

                <span asp-validation-for="PagesAmount" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="number" asp-for="Price" class="form-control" step="0.01" placeholder="Enter price..." />
                <label asp-for="Price"></label>

                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Author" class="form-control" placeholder="Enter author..." />
                <label asp-for="Author"></label>

                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group float-end">
                <input type="submit" value="Submit" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>


