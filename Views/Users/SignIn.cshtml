@model SignIn

@{
    ViewData["Title"] = "Sign In";
}

<form asp-controller="Users" asp-action="SignIn" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Login" class="form-control" placeholder="Enter Login..." />
        <label asp-for="Login"></label>

        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password..." />
        <label asp-for="Password"></label>

        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" asp-for="RepeatPassword" class="form-control" placeholder="Repeat Password..." />
        <label asp-for="RepeatPassword"></label>

        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
    </div>

    <div class="form-group float-end">
        <input type="submit" value="SignIn" class="btn btn-outline-success" />
    </div>
</form>