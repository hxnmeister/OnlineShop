@model SignUp

@{
    ViewData["Title"] = "Sign Up";
}

<form asp-controller="Users" asp-action="SignUp" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Id" class="form-control" placeholder="Enter Id..." />
        <label asp-for="Id"></label>

        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Login" class="form-control" placeholder="Enter Login..." />
        <label asp-for="Login"></label>

        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password..." />
        <label asp-for="Password"></label>

        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email..." />
        <label asp-for="Email"></label>

        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="FirstName" class="form-control" placeholder="Enter FirstName..." />
        <label asp-for="FirstName"></label>

        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="LastName" class="form-control" placeholder="Enter LastName..." />
        <label asp-for="LastName"></label>

        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Age" class="form-control" placeholder="Enter Age..." />
        <label asp-for="Age"></label>

        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group float-end">
        <input type="submit" value="SignUp" class="btn btn-outline-success" />
    </div>
</form>