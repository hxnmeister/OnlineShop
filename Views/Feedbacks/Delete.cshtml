@model OnlineShop.Models.Feedback

@{
    ViewData["Title"] = "Confirm delete!";
}

<h1>Are you sure you want to delete this feedback?</h1>
<br />

<div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                Text:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Body)
            </dd>
        </dl>
